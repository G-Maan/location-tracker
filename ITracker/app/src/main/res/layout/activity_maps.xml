<LinearLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MapsActivity" />
    </FrameLayout>
    <!-- The navigation drawer -->
    <!--<ListView android:id="@+id/left_drawer"-->
        <!--android:layout_width="240dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="start"-->
        <!--android:choiceMode="singleChoice"-->
        <!--android:divider="@android:color/transparent"-->
        <!--android:dividerHeight="0dp"-->
        <!--android:background="#111"/>-->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:id="@+id/menu_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/scrim"
            android:visibility="invisible"
            >

            <com.ogaclejapan.arclayout.ArcLayout
                android:id="@+id/arc_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32dp"
                app:arc_axisRadius="@dimen/layout_child_offset_large"
                app:arc_freeAngle="false"
                app:arc_origin="bottom|right"
                app:arc_radius="@dimen/layout_radius_large"
                >

                <Button
                    style="@style/Item.Path"
                    android:text="A"
                    android:textColor="@color/path_orange"
                    app:arc_angle="30"
                    />

                <Button
                    style="@style/Item.Path"
                    android:text="B"
                    android:textColor="@color/path_blue"
                    app:arc_angle="60"
                    />

                <Button
                    style="@style/Item.Path"
                    android:text="C"
                    android:textColor="@color/path_black"
                    app:arc_angle="90"
                    />

                <Button
                    style="@style/Item.Path"
                    android:text="D"
                    android:textColor="@color/path_green"
                    app:arc_angle="120"
                    />

                <Button
                    style="@style/Item.Path"
                    android:text="E"
                    android:textColor="@color/path_purple"
                    app:arc_angle="150"
                    />

            </com.ogaclejapan.arclayout.ArcLayout>

        </FrameLayout>

        <Button
            android:id="@+id/fab"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:background="@drawable/path_fab"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="24sp"
            />

    </RelativeLayout>
</LinearLayout>